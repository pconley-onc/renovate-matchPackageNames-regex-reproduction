{
  "extends": [
    "config:js-app",
    ":disableDependencyDashboard"
  ],

  "automergeType": "branch",
  "ignoreTests": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["webpack"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["/cypress/"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
