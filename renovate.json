{
  "timezone": "America/Vancouver",
  "extends": ["schedule:nonOfficeHours"],

  "automergeType": "branch",
  "ignoreTests": true,

  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["webpack"],
      "automerge": true,
      "schedule": ["* 0-4 * * *"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["/cypress/"],
      "automerge": true,
      "schedule": ["* 0-4 * * *"]
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
